<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Schedule a Flight</title>
</head>
<body class="newSearch">
    <header>
        <h1><%= title %></h1>
        <nav>
          <a href="/">Home</a>
          <a href="/flights">Flight Log</a>
          <a href="/flights/new">Flight Search</a>
          <a href="/destinations/new" >Flight Destinations</a>
        </nav>
      </header> 
    <section>
        <br>
        <br>
    <section class="destination">
    <h3>Select a flight destination:</h3>
    <select multiple >
        <% destinations.forEach(function(d){ %>
           <optgroup label="Destionation Airport">  
                <option><%=d.airport %></option>
            </optgroup>
            <optgroup label="Locations">
                <option><%= d.location  %> </option>
            </optgroup>

        <% }) %> 
    </select>
    <br>
    <br>
  <form class="destination-form" action="/destionations" method="POST">
    <label>Destination Airport:</label>
    <input type="text" name="airport" placeholder="DCA">
    <br>
    <label>Destination Location:</label>
    <input type='text' name="location" placeholder="Washington, D.C.">
    <br>
    <input type="submit" value="Add Destination">
</form>
</section>