<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Flight Log</title>
</head>
<body class="flightsIndex">

    <header>
        <h1><%= title %></h1>
        <nav>
          <a href="/">Home</a>
          <a href="/flights">Flight Log </a>
          <a href="/flights/new">Flight Search</a>
        </nav>
      </header> 
    <section class = "flightLog">
        <table class="flightTable" >
            <tr class="flightTableHeading">
            
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Departure Number</th>
                <th>Departure Date & Time</th>
            </tr>
            <tr class="flightrow">
            <% flights.forEach(function(flight){%>
                <td class="airline"><%=flight.airline%></td> 
                <td class="airport"><%=flight.airport%></td>
                <td class= "flightNo"><%=flight.flightNo%></td>
                <td class="departs"><%=flight.departs%></td> 
            
             </tr>
             <% }) %>  
       </table>
       
    </section>
</body>
</html>